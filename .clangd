If:
  PathMatch: .*\.(cpp|hpp|c|h)$

CompileFlags:
  Add: 
    - "-std=c++20"
    - "-I${workspaceFolder}/include"
    - "-I${workspaceFolder}/libs/GLFW/include"
    - "-I${workspaceFolder}/libs/glad/include"
    - "-DGLFW_INCLUDE_NONE"
    - "-D_CRT_SECURE_NO_WARNINGS"
    - "-Wall"
    - "-Wextra"
  Remove: 
    - "-W*"
    - "/W*"
    - "-wrapper"
    - "--target=*"
  Compiler: msvc

Index:
  Background: Build
  StandardLibrary: Yes

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: 
      - modernize*
      - performance*
      - bugprone*
    Remove: 
      - modernize-use-trailing-return-type

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes

Hover:
  ShowAKA: Yes

Style:
  FullyQualifiedNamespaces: No
